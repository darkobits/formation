{
  "name": "formation",
  "private": true,
  "engines": {
    "npm": ">=4.x",
    "node": ">=6.x"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist --npm-client=yarn",
    "lint": "lerna run lint",
    "test": "lerna run test",
    "build": "lerna run build",
    "prepare": "run-s bootstrap",
    "prepush": "npm run lint",
    "postpublish": "lerna run dist-tags",
    "prerelease": "run-p lint test build",
    "release": "lerna publish --conventional-commits",
    "release:canary": "npm run release -- --npm-tag=canary",
    "release:beta": "npm run release:canary -- --cd-version=prerelease --preid=beta",
    "start": "(cd packages/formation-demo; yarn start)"
  },
  "devDependencies": {
    "husky": "0.14.x",
    "lerna": "^2.1.0",
    "npm-run-all": "4.x"
  },
  "xo": {
    "env": [
      "browser",
      "jest"
    ],
    "space": true,
    "rules": {
      "capitalized-comments": "warn",
      "import/no-extraneous-dependencies": "off",
      "import/no-unassigned-import": "off",
      "import/no-unresolved": "off",
      "import/prefer-default-export": "off",
      "max-nested-callbacks": "off",
      "max-params": "off",
      "new-cap": "off",
      "no-multiple-empty-lines": "off",
      "no-prototype-builtins": "off",
      "prefer-arrow-callback": "off",
      "space-before-function-paren": [
        "error",
        {
          "named": "always"
        }
      ],
      "unicorn/filename-case": "off"
    }
  }
}
