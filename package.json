{
  "name": "@darkobits/formation",
  "version": "0.2.12",
  "license": "WTFPL",
  "contributors": [
    {
      "name": "Joshua Martin",
      "email": "joshua@frontlawn.net"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/darkobits/formation.git"
  },
  "engines": {
    "npm": ">=3.0.0",
    "node": ">=6.x"
  },
  "main": "index.js",
  "scripts": {
    "lint": "xo",
    "test": "jest",
    "test:watch": "jest --watch",
    "build": "rimraf dist && babel src --out-dir dist --copy-files",
    "docs:build": "rimraf docs && jsdoc --configure jsdoc.conf.json --destination docs --recurse --verbose",
    "precommit": "run-p lint test",
    "release": "npm run build && ncp ./package.json ./dist/package.json && npm publish ./dist",
    "release:canary": "npm run build && ncp ./package.json ./dist/package.json && npm publish --tag=canary ./dist"
  },
  "xo": {
    "env": "jest",
    "space": true,
    "rules": {
      "import/no-named-as-default": "off",
      "import/no-unassigned-import": "off",
      "max-params": "off",
      "no-multiple-empty-lines": "off",
      "space-before-function-paren": [
        "error",
        {
          "named": "always"
        }
      ],
      "unicorn/filename-case": "off"
    }
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "/tests/"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 75,
        "branches": 50,
        "functions": 75,
        "lines": 75
      }
    }
  },
  "peerDependencies": {
    "angular": ">=1.5.0",
    "angular-messages": ">=1.5.0",
    "babel-polyfill": "6.x"
  },
  "dependencies": {
    "ramda": "0.23.x"
  },
  "devDependencies": {
    "angular": "1.5.x",
    "angular-messages": "1.5.x",
    "angular-mocks": "1.5.x",
    "babel-cli": "6.x",
    "babel-core": "6.x",
    "babel-jest": "18.x",
    "babel-plugin-angularjs-annotate": "0.7.x",
    "babel-polyfill": "6.x",
    "babel-preset-es2015": "6.x",
    "babel-runtime": "6.x",
    "husky": "0.13.x",
    "jest": "18.x",
    "jsdoc": "3.4.x",
    "ncp": "2.0.x",
    "npm-run-all": "4.x",
    "rimraf": "2.5.x",
    "xo": "0.17.x"
  }
}
